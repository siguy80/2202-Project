#include <Adafruit_NeoPixel.h>
#include <MSE2202_Lib.h>

#define servo 2
#define servo1 4
#define servo2 21

const int servo_Open=700;
const int servo_Closed=2000;
const int servo1_Open=300;
const int servo1_Closed=2200;
const int servo2_Open=570;
const int servo2_Closed=1200;

int x=servo_Open;

Motion Bot = Motion();
void setup(){
Serial.begin(9600);
Bot.servoBegin("S1",servo);
Bot.servoBegin("S2",servo1);
Bot.servoBegin("S3",servo2);
}

void loop(){
  //Bot.ToPosition("S3",servo2_Open);
  for (x=servo2_Open; x<=(servo2_Closed);x=x+50){
    Serial.println(x);
    Bot.ToPosition("S1",x);
    Bot.ToPosition("S2",x);
    Bot.ToPosition("S3",x);
    delay(200);}
  delay(1000);
  for (x=servo2_Closed; x>=servo2_Open;x=x-50){
     Serial.println(x);
     Bot.ToPosition("S1",x);
     Bot.ToPosition("S2",x);
     Bot.ToPosition("S3",x);

     delay(200);
  }
  delay(1000);
}
